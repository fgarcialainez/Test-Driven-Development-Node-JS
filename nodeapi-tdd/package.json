{
  "name": "nodeapi-tdd",
  "version": "1.0.0",
  "description": "Node.js + Express + TDD",
  "main": "src/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon index",
    "test": "cross-env NODE_ENV=test jest --watch",
    "posttest": "cross-env NODE_ENV=test node test-cleanup",
    "lint": "eslint .",
    "test:staging": "cross-env NODE_ENV=staging jest -f . --runInBand",
    "migrate:test": "cross-env NODE_ENV=staging sequelize-cli db:migrate",
    "pretest:staging": "npm run migrate:test"
  },
  "author": "Felix Garcia Lainez",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.10.1",
    "file-type": "^14.7.0",
    "i18next": "^19.4.5",
    "i18next-fs-backend": "^1.0.6",
    "i18next-http-middleware": "^2.1.2",
    "nodemailer": "^6.4.8",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.0",
    "nodemailer-stub": "^1.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "smtp-server": "^3.6.0",
    "supertest": "^6.1.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ]
  }
}
